<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topGuide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.12" />

    <com.example.miniimageeditor.ui.ShimmerImageView
        android:id="@+id/logoView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topGuide" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="简图"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@id/logoView"
        app:layout_constraintTop_toTopOf="@id/logoView"
        app:layout_constraintBottom_toBottomOf="@id/logoView"
        android:layout_marginStart="16dp" />

    <LinearLayout
        android:id="@+id/primaryActions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@id/logoView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:padding="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnImport"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:text="@string/home_import_photo"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            app:icon="@drawable/ic_add"
            app:iconTint="@color/white"
            app:cornerRadius="@dimen/corner_md"
            app:iconPadding="@dimen/space_sm"
            android:minHeight="56dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCamera"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:text="@string/home_camera"
            android:textColor="@color/black"
            android:backgroundTint="@color/mint"
            app:icon="@drawable/ic_camera"
            app:iconTint="@color/black"
            app:cornerRadius="@dimen/corner_md"
            app:iconPadding="@dimen/space_sm"
            android:minHeight="56dp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondaryActions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@id/primaryActions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:padding="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAiPortrait"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:text="@string/home_ai_portrait"
            android:textColor="@color/black"
            android:backgroundTint="#FFF7E6"
            app:icon="@drawable/ic_face"
            app:iconTint="@color/black"
            app:cornerRadius="@dimen/corner_md"
            app:iconPadding="@dimen/space_sm"
            android:minHeight="56dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBeautify"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:text="图片美化"
            android:textColor="@color/black"
            android:backgroundTint="@color/mint"
            app:icon="@drawable/ic_feature_magic"
            app:iconTint="@color/black"
            app:cornerRadius="@dimen/corner_md"
            app:iconPadding="@dimen/space_sm"
            android:minHeight="56dp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOpenAlbum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/home_album"
        app:layout_constraintTop_toBottomOf="@id/secondaryActions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/gray_dark"
        android:textColor="@color/white"
        app:cornerRadius="@dimen/corner_md" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/featureGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btnOpenAlbum"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
