<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-feature android:name="android.hardware.camera.any" android:required="false" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MiniImageEditor"
        android:largeHeap="true"
        android:localeConfig="@xml/locales_config">

        <activity android:name="com.example.miniimageeditor.EditorActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity android:name="com.example.miniimageeditor.CameraActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity android:name="com.example.miniimageeditor.VideoPlayerActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity android:name="com.example.miniimageeditor.AlbumActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity android:name="com.example.miniimageeditor.CollageSelectActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity android:name="com.example.miniimageeditor.CollageModeActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity android:name="com.example.miniimageeditor.CollageLinearActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity android:name="com.example.miniimageeditor.CollageFreeActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity android:name="com.example.miniimageeditor.CollageGridActivity"
            android:exported="false"
            android:screenOrientation="portrait" />


        <activity android:name="com.example.miniimageeditor.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.miniimageeditor.MainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>
</manifest>
